{
  "name": "@botfactory/moodioos",
  "version": "1.0.0",
  "description": "Discord bot for wellness, motivation & good vibes with music recommendations & voice features",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias && node scripts/copy-assets.mjs",
    "start": "node dist/index.js",
    "deploy": "tsx src/deploy-commands.ts",
    "deploy:dev": "tsx src/deploy-commands.ts --dev",
    "deploy:prod": "tsx src/deploy-commands.ts --prod",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist",
    "prebuild": "pnpm run clean",
    "validate": "pnpm run type-check && pnpm run lint && pnpm run format:check && pnpm run test",
    "prepare": "pnpm run build",
    "knip": "knip"
  },
  "keywords": [
    "discord",
    "bot",
    "discord.js",
    "typescript",
    "template",
    "fastify",
    "api",
    "slash-commands"
  ],
  "author": "BotDiscordFactory",
  "license": "MIT",
  "dependencies": {
    "@discordjs/voice": "^0.19.0",
    "@fastify/cors": "^10.1.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.4",
    "@snazzah/davey": "^0.1.9",
    "discord.js": "^14.25.1",
    "dotenv": "^16.6.1",
    "fastify": "^5.6.2",
    "libsodium-wrappers": "^0.8.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.19.3",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "knip": "^5.80.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  }
}
